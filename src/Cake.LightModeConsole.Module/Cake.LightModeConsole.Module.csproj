<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <LangVersion>8</LangVersion>
    <TargetFramework>netstandard2.0</TargetFramework>
    <Copyright>Copyright (c) Mattias Karlsson and contributors</Copyright>
    <Authors>Mattias Karlsson</Authors>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <RepositoryUrl>https://github.com/devlead/Cake.LightModeConsole.Module</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageProjectUrl>https://github.com/devlead/Cake.LightModeConsole.Module</PackageProjectUrl>
    <PackageIcon>cake-contrib-medium.png</PackageIcon>
    <PackageTags>Cake;Script;Build;DevOps;cake-module</PackageTags>
    <Description>Cake module that will use a console palette suitable for light background colors.</Description>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Cake.Core" Version="1.0.0" />
  </ItemGroup>

  <ItemGroup>
    <None Include="../../nuspec/cake-contrib-medium.png" Pack="true" PackagePath=""/>
  </ItemGroup>

</Project>
